@model IEnumerable<PetroPrice_MVC.Models.PetrolStation>

@{
    ViewData["Title"] = "Index";
}

<h3>Melbourne Fuel Station List </h3>

<div class="form-custom">
    <form asp-action="SearchResults" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name:
                <input type="text" name="SearchTerm"/>
                <input type="submit" value="Search" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-dark ">Back to full List</a>
                <a asp-action="Create" class="btn btn-dark">Create</a>
            </p>
        </div>
    </form>
</div>
<div class="container list-container d-flex flex-wrap">
    @foreach (var item in Model)
    {
        <div id="card-number-@item.Id">
            <partial name="_petrolStationCard" model="item" />
        </div>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id" class="control-label">Id</label>
                    <input id="modal-input-id" for="Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input id="modal-input-name" for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Address" class="control-label">Address</label>
                    <input id="modal-input-address" for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Price" class="control-label">Price</label>
                    <input id="modal-input-price" for="Price" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="save-button" type="button" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>